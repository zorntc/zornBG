  <Action>
  <Name>Accept Friend Request, AFR</Name>
  
  <Query>
  <syntax>UPDATE User u Set pendcnt = pendcnt - 1 where u.UserID=?</syntax>
  </Query>
  <Query>
  <syntax>UPDATE User u Set confcnt = confcnt + 1 where u.UserID=? or u.userID=?</syntax>
  </Query>
  
  
