  <Action>
  <Name>Invite Friend,IF</Name>
  
  <Query>
  <syntax>UPDATE User u Set pendcnt = pendcnt + 1 where u.UserID=?</syntax>
  </Query>
  
  
  <frequency>4</frequency>
